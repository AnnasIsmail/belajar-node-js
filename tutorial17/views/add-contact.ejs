<h2 class="my-4 text-center">Tambah Data Contact Baru</h2>

<% if (error) { %>
  <div class="alert alert-danger mt-3" role="alert">
    Email Sudah Terdaftar!
  </div>
<% } %>

<form method="post" action="/contact">
    <div class="mb-3">
        <label for="name" class="form-label">Full Name</label>
        <input type="text" id="name" name="name" class="form-control" aria-describedby="emailHelp" required>
    </div>
    <div class="mb-3">
      <label for="email" class="form-label">Email address</label>
      <input type="email" name="email" id="email" class="form-control"  required>
    </div>
    <div class="mb-3">
        <label for="nohp" class="form-label">No HandPhone</label>
        <input type="number" name="nohp" id="nohp" class="form-control" required>
    </div>
    <button type="submit" class="btn btn-primary mt-2" style="width:100%">Submit</button>
  </form>